{
  "extends": "tslint-config-airbnb",
  "rules": {
    "quotemark": false,
    "max-line-length": [
      true,
      150
    ],
    "indent": [
      true,
      "spaces"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "trailing-comma": [
      false
    ],
    "ter-arrow-parens": [
      false,
      "always"
    ],
    "variable-name": [
      false
    ],
    "import-name": [
      false
    ],
    "newline-before-return": true,
    "ter-newline-after-var": [
      false,
      "always"
    ],
    "no-unused-variable": true,
    "align": [
      false
    ],
    "no-parameter-reassignment": false,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      //"arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ]
  }
}
